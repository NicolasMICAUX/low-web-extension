{
  "name": "low-carbon-web",
  "description": "Reduce CO2 impact of your navigation",
  "version": null,
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "management",

    "activeTab",
    "storage",
    "declarativeContent"
  ],
  "browser_action": {
    "default_title": "low-carbon-web",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "options.js"
  ],
  "options_ui": {
    "page": "options/options.html"
  }
}
